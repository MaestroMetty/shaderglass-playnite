<?xml version="1.0"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Settings Labels -->
    <sys:String x:Key="LOCShaderGlassBrowseButton">Browse...</sys:String>
    <sys:String x:Key="LOCShaderGlassExecutablePathLabel">ShaderGlass Executable Path:</sys:String>
    <sys:String x:Key="LOCShaderGlassExecutablePathDescription">Path to the ShaderGlass executable file (\path\to\shaderglass\ShaderGlass.exe)</sys:String>
    <sys:String x:Key="LOCShaderGlassProfilesPathLabel">Profiles Directory Path:</sys:String>
    <sys:String x:Key="LOCShaderGlassProfilesPathDescription">Path to the directory containing ShaderGlass profile files (.sgp files)</sys:String>

    <!-- Dialog Titles -->
    <sys:String x:Key="LOCShaderGlassSelectExecutableTitle">Select ShaderGlass executable</sys:String>
    <sys:String x:Key="LOCShaderGlassSelectProfilesTitle">Select Profiles Directory (you can type the path in the address bar)</sys:String>
    <sys:String x:Key="LOCShaderGlassSelectFolder">Select Folder</sys:String>

    <!-- Error Messages -->
    <sys:String x:Key="LOCShaderGlassExecutablePathRequired">ShaderGlass executable path is required.</sys:String>
    <sys:String x:Key="LOCShaderGlassExecutablePathNotExist">ShaderGlass executable path does not exist.</sys:String>
    <sys:String x:Key="LOCShaderGlassExecutablePathMustBeExe">ShaderGlass executable path must include the .exe file extension.</sys:String>
    <sys:String x:Key="LOCShaderGlassProfilesPathRequired">Profiles directory path is required.</sys:String>
    <sys:String x:Key="LOCShaderGlassProfilesPathNotExist">Profiles directory path does not exist.</sys:String>

</ResourceDictionary>